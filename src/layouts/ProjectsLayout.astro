---
import Footer from "../components/Footer.astro";
import Metadata from "../components/Metadata.astro";
import "../styles/global.css";

const { title, siteIcon } = Astro.props;
---

<html lang="en">
  <Metadata title={title} , siteIcon={siteIcon} />
  <body class="bg-slate-50 min-h-screen flex flex-col">
    <!-- <Header /> -->
    <main id="content" class="flex-grow">
      <div class="w-full max-w-3xl mx-auto mt-5 md:mt-15 sm:px-6 lg:px-8">
        <div
          class="bg-white flex flex-col shadow-xl rounded-lg py-7 px-10 mb-3"
        >
          <slot />
        </div>
      </div>
      <script src="/src/scripts/scripts.js"></script>
    </main>
    <Footer />
  </body>
</html>
